---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features from '~/components/widgets/Features.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Steps from '~/components/widgets/Steps.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'NZOZ Lek-Medical — Przychodnia Lekarza Rodzinnego w Zemborzycach',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero id="info" actions={[]} image={{ src: '~/assets/images/building.jpeg', alt: 'Lek-Medical Hero Image' }}>
    <Fragment slot="title">Od 21 lat dbamy o Twoje zdrowie</Fragment>
  </Hero>

  <Features3
    id="about"
    tagline="O nas"
    title="Nasza placówka"
    image={{
      src: '~/assets/images/office.png',
      alt: 'Lek-Medical About Image',
    }}
  >
    <Fragment slot="subtitle">
      <span
        >Założony w styczniu 2003 roku, <span class="font-semibold"
          >NZOZ Lek-Medical Błażejczyk i Nowacka "Spóła Partnerska - Lekarze"</span
        > to miejsce, gdzie profesjonalizm spotyka się z ciepłą, przyjazną atmosferą. <br /><br />
        Jesteśmy Przychodnią Lekarza Rodzinnego świadczącą bezpłatne porady dla zadeklarowanych do naszej placówki pacjentów
        w ramach podpisanej umowy z NFZ.<br /><br />
        Stawiamy na empatię i nowoczesność w budowaniu zdrowej przyszłości dla naszych pacjentów.</span
      >
    </Fragment>
  </Features3>

  <Steps
    id="reception-hours"
    title="Godziny przyjęć"
    items={[
      {
        title: 'Pon - Pt',
        description: '8:00 - 18:00',
        icon: 'tabler:clock',
      },
